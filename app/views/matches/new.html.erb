<h1>Add new match:</h1>

<% if @errors %>
  <div class="errors">
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :matches, :url => matches_path do |f| %>
<div class="form-group">
  <%= f.hidden_field :location, :value => "Basketball Court" %>
  <%= f.hidden_field :season, :value => "1" %>

  <%= f.label :start_time_string,'Start' %>:
  <%= f.datetime_local_field :start_time_string, class: "form-control", :value => @match.try(:start_time_string) %>
<br>
  <%= f.label :competitor %>:
  <%= f.collection_select :competitor1_id, @competitors.all, :id, :name, prompt: true, class: "form-control", :selected => @match.try(:competitor1_id)%>
<br>
  <%= f.label :competitor %>:
  <%= f.collection_select :competitor2_id, @competitors.all, :id, :name, prompt: true, class: "form-control", :selected => @match.try(:competitor2_id) %>
<br>
</div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
