<h1>Competition Calendar</h1>

<div>
  <div class="btn-group" id='month-selector'>
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Select Month <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "January", :controller => "calendar", :start_date => "January" %></li>
      <li><%= link_to "October", :controller => "calendar", :start_date => "October" %></li>
    </ul>
  </div>
  <div id ='match-calendar'>
    <table>
      <div id="calendar-header">
        <tr>
          <th>Date</th>
          <th>Competitor 1 Name</th>
          <th>Competitor 2 Name</th>
          <th>Location</th>
        </tr>
      </div>
      <div id="calendar-data">
        <% @matches.each do |match| %>
          <tr id="match_<%=match.id%>">
            <td><%= time_tag(match.start_time) %></td>
            <td><%= Competitor.find(match.competitor1_id).name %></td>
            <td><%= Competitor.find(match.competitor2_id).name %></td>
            <td><%= match.location %></td>
          </tr>
        <% end %>
      </div>
    </table>
  </div>
</div>
